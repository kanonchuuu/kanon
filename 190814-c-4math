Function: Display Addition, Subtraction, Multiplication, Division
*/
#include <stdio.h>

float Add(float x, float y);
float Sub(float x, float y);
float Mul(float x, float y);
float Div(float x, float y);

int main()
{
	float num1, num2;

	printf("* MATH: Display for 2 numbers: Addition, Subtraction, Multiplication, Division\n");
	printf("Please input first number: \n");
	scanf("%f", &num1);
	printf("Please input second number: \n");
	scanf("%f", &num2);
	printf("Addition: %.f\n", Add(num1, num2));
	printf("Subtraction: %.f\n", Sub(num1, num2));
	printf("Multiplication: %.f\n", Mul(num1, num2));
	printf("Division: %.2f\n", Div(num1, num2));

	return 0;
}

float Add(float x, float y) {
	return x + y;
}
float Sub(float x, float y) {
	return x - y;
}
float Mul(float x, float y) {
	return x * y;
}
float Div(float x, float y) {
	return x / y;
}
